// ce fichier regroupe des fonctions permettant l'execution du jeu des 10000

#define _CRT_SECURE_NO_WARNINGS

#include<stdlib.h>
#include<stdio.h>
#include<string.h>
#include<time.h>


struct joueur_Des {

	char nom[20];
	int score;


};

int main()
{

	int tab[6];

	struct joueur_Des joueur[6]; int i; int nbjoueur;

	// la boucle se rep√®te tant que l'utilisateur saisit un chiffre inferieur a 2 ou superieur a 6
	do {
		printf("Entrez le nombre de joueur entre 2 et 6\n\n");

		scanf("%d", &nbjoueur);


	} while (nbjoueur < 2 || nbjoueur > 6);

	// demander aux joueurs d'entrer leurs noms
	for (int i = 0; i < nbjoueur; i++)
	{
		printf("Entrez le nom du joueur %d:  ", i + 1);
		scanf("%s", joueur[i].nom);
	}
	// generer les scores de chaque joueur
	srand(time(NULL));
	for (int j = 0; j < nbjoueur; j++)
	{
		for (i = 0; i < 6; i++)
		{
			joueur[i].score = rand() % 6 + 1;

		}
		printf("%s, vos scores sont:  %d, %d, %d, %d, %d, %d\n\n", joueur[j].nom, joueur[0].score, joueur[1].score, joueur[2].score, joueur[3].score, joueur[4].score, joueur[5].score);
		getchar();


	}



	int calculPoints()
	{



		int scoreJoueur = 0;
		int tabDes[6] = { 0,0,0,0,0,0 };

		for (i = 0; i < 6; i++)
		{
			if (tab[i] == 1)
			{
				tabDes[0] += 1;
				scoreJoueur = 100;
			}
			else if (tab[i] = 2)
			{
				tabDes[1] += 2;
			}
			else if (tab[i] = 3)
			{
				tabDes[2] = 3;
			}
			else if (tab[i] = 4)
			{
				tabDes[3] += 4;
			}
			else if (tab[i] = 5)
			{
				tabDes[4] += 5;
			}
			else if (tab[i] = 5)
			{
				tabDes[5] += 6;
			}
		}

		if (tabDes[0] == 6)
		{
			scoreJoueur = 1;
		}
		else if (tabDes[1] == 12 || tabDes[2] == 18 || tabDes[3] == 24 || tabDes[4] == 30 || tabDes[5] == 36)
		{
			scoreJoueur += 1000 * tab[0];
		}

		for (int i = 0; i < 6; i++)
		{
			if (tab[i] == 1 && tabDes[0] == 3 || tabDes[0] == 4 || tabDes[0] == 5)
			{
				scoreJoueur += 1000;
				tabDes[0] = 0;
			}
			else
			{
				if (tab[i] == 2 && tabDes[1] == 6 || tabDes[1] == 8 || tabDes[1] == 10)
				{
					scoreJoueur += 100 * tab[i];
					tabDes[1] = 0;
				}
				else if (tab[i] == 3 && tabDes[2] == 9 || tabDes[2] == 12 || tabDes[2] == 15)
				{
					scoreJoueur += 100 * tab[i];
					tabDes[2] = 0;
				}
				else if (tab[i] == 4 && tabDes[3] == 12 || tabDes[3] == 16 || tabDes[3] == 20)
				{
					scoreJoueur += 100 * tab[i];
					tabDes[3] = 0;
				}
				else if (tab[i] == 5 && tabDes[4] == 15 || tabDes[4] == 20 || tabDes[4] == 25)
				{
					scoreJoueur += 100 * tab[i];
					tabDes[4] = 0;
				}
				else if (tab[i] == 6 && tabDes[2] == 18 || tabDes[2] == 24 || tabDes[2] == 30)
				{
					scoreJoueur += 100 * tab[i];
					tabDes[5] = 0;
				}
			}
		}

		if (scoreJoueur == 0)
		{
			scoreJoueur -= 1000;
		}

		return scoreJoueur;

	}

	return 0;
}

